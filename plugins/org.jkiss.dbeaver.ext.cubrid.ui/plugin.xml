<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>

<plugin>

    <extension point="org.jkiss.dbeaver.dataSourceView">
        <view
                id="org.jkiss.dbeaver.ext.cubrid.dataSourceWizardView"
                dataSource="cubrid"
                targetID="org.jkiss.dbeaver.ext.ui.newConnectionWizard"
                label="%dialog.connection.header"
                class="org.jkiss.dbeaver.ext.cubrid.views.CubridConnectionPage"
                icon="#database_icon_default">
        </view>
        <view
                class="org.jkiss.dbeaver.ext.cubrid.views.CubridConnectionPage"
                icon="#database_icon_default"
                id="org.jkiss.dbeaver.ext.cubrid.dataSourceEditorView"
                dataSource="cubrid"
                label="%dialog.connection.header"
                targetID="org.jkiss.dbeaver.ext.ui.editConnectionDialog">
        </view>
    </extension>

    <extension point="org.jkiss.dbeaver.databaseEditor">
        <editor
                id="cubrid.table.ddl.view"
                class="org.jkiss.dbeaver.ui.editors.sql.SQLSourceViewer"
                main="false"
                label="DDL"
                description="%tree.ddl.node.tip"
                position="additions_end"
                icon="#sql_text"
                type="folder">
            <objectType name="org.jkiss.dbeaver.ext.cubrid.model.CubridTable"/>
        </editor>
        <editor
                id="cubrid.view.source.view"
                class="org.jkiss.dbeaver.ext.cubrid.editors.CubridSourceViewEditor"
                main="false"
                label="Definition"
                description="View definition"
                position="additions_end"
                icon="#sql_text"
                type="folder"
                embeddable="false">
            <objectType name="org.jkiss.dbeaver.ext.cubrid.model.CubridView"/>
        </editor>
        <editor id="cubrid.source.view" class="org.jkiss.dbeaver.ext.cubrid.editors.CubridSourceViewEditor"
                label="%editor.source.name" description="%editor.source.name" icon="#sql_text" position="additions_middle"
                contributor="org.jkiss.dbeaver.ui.editors.sql.SQLEditorContributorNested" type="folder" embeddable="false">
            <objectType name="org.jkiss.dbeaver.ext.cubrid.model.CubridScriptObject"/>
        </editor>

        <configurator class="org.jkiss.dbeaver.ext.cubrid.views.CubridTableForeignKeyConfigurator">
            <objectType name="org.jkiss.dbeaver.ext.cubrid.model.CubridTableForeignKey"/>
        </configurator>
        <configurator class="org.jkiss.dbeaver.ext.cubrid.views.CubridTableIndexConfigurator">
            <objectType name="org.jkiss.dbeaver.ext.cubrid.model.CubridTableIndex"/>
        </configurator>
        <configurator class="org.jkiss.dbeaver.ext.cubrid.views.CubridTablePrimaryKeyConfigurator">
            <objectType name="org.jkiss.dbeaver.ext.cubrid.model.CubridUniqueKey"/>
        </configurator>
    </extension>

</plugin>
